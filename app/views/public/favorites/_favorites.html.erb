<div class="mr-3">
  <% if user_signed_in? %>
    <% if question.favorited_by?(current_user) %>
      <%= link_to question_favorites_path(question), method: :delete, remote: true do %>
        <button type="button" class="btn btn-link mb-1 mr-0 pr-0">いいね</button>
        <i class="fas fa-thumbs-up"></i><%= question.favorites.count %>
      <% end %>
    <% else %>
      <%= link_to question_favorites_path(question), method: :post, remote: true do %>
        <button type="button" class="btn btn-link mb-1 mr-0 pr-0">いいね</button>
        <i class="far fa-thumbs-up"></i><%= question.favorites.count %>
      <% end %>
    <% end %>
  <% end %>
</div>