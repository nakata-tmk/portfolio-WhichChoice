            <div id="all" class="tab-pane active">
              <p class="mt-3 ml-3">
                <%= "#{@question.object1}派 #{@question.answers0.count}" %>
                <%= "/ #{@question.object2}派 #{@question.answers1.count}" %>
              </p>
              <%= render partial: 'layouts/piechart', locals: { question: @question, answers0: @question.answers0, answers1: @question.answers1, chart_name: "all"} %>
            </div>

