<div class="row">
  <div class="col-md-8">
    <h3 class="mt-3">コメント<i class="fas fa-comment"></i><%=@question.comments.count %></h3>
    <% if user_signed_in? %>
      <%= form_with model: [@question, @comment], local:true do |f| %>
        <%= f.text_area :body, placeholder: "コメントを入力", size: "40x3" %>
        <%= f.submit "コメントする", class: "btn btn-primary btn-sm mb-4 ml-3" %>
      <% end %>
    <% end %>

    <table class="table-borderless text-left">
      <% @question.comments.each do |comment| %>
        <tr>
          <td>
            <p class="mb-0">
              <%= attachment_image_tag comment.user, :image, size: "40x40", fallback: "noimage.jpg" %>
              <%= comment.user.name %>
              <%= comment.created_at.strftime('%Y/%m/%d') %>
            </p>
          </td>
        </tr>
        <tr>
          <td>
            <p>
              <%= comment.body %>
              <% if comment.user == current_user %>
                <%= link_to "削除", question_comment_path(comment.question, comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: "ml-3" %>
              <% end %>
            </p>
          </td>
        </tr>
       <% end %>
    </table>

  </div>
</div>
