<div class="row">
  <div class="col-md-10">
    <%= render partial: 'layouts/message', locals: { model: @answer, model: @comment } %>

    <div class="question">
      <div class="card">
        <div class="card-header">
          <h2><%= "あなたは#{@question.object1}派 or #{@question.object2}派？" %></h2>
        </div>

        <div class="card-body">
          <p>
            <%= attachment_image_tag @question.user, :image, size: "40x40", fallback: "noimage.jpg" %>
            <%= @question.user.name %>
            <%= @question.created_at.strftime('%Y/%m/%d') %>
            <span class="green"><%= "＃#{@question.genre.name}" %></span>
          </p>
          <p class="mb-3"><%= @question.body %></p>

          <div class="text-right">
            <% if @question.user == current_user %>
              <%= link_to "編集", edit_question_path, class: "btn btn-link" %>
              <%= link_to "削除", question_path(@question.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-link mr-2" %>
            <% end %>
          </div>

          <ul class="nav nav-tabs">
            <li class="nav-item">
              <a  href="#all" class="nav-link active" data-toggle="tab">全体</a>
            </li>
            <li class="nav-item">
              <a  href="#sex" class="nav-link" data-toggle="tab">性別別</a>
            </li>
            <li class="nav-item">
              <a  href="#age" class="nav-link" data-toggle="tab">年齢別</a>
            </li>
            <li class="nav-item">
              <a  href="#area" class="nav-link" data-toggle="tab">地域別</a>
            </li>
          </ul>

