<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :sex %><br />
    <%= f.select :sex, User.sexes.keys.map{|k| [I18n.t("enums.user.sex.#{k}"), k]},
      include_blank: '選択してください', autofocus: true, autocomplete: "sex" %>
  </div>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.select :age, User.ages.keys.map{|k| [I18n.t("enums.user.age.#{k}"), k]},
      include_blank: '選択してください', autofocus: true, autocomplete: "age" %>
  </div>

  <div class="field">
    <%= f.label :area %><br />
    <%= f.select :area, User.areas.keys.map{|k| [I18n.t("enums.user.area.#{k}"), k]},
      include_blank: '選択してください', autofocus: true, autocomplete: "area" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/users/shared/links" %>
