<h2>マイページ</h2>

<table>
  <tr>
    <th>名前</th>
    <td><%= @user.name %></td>
    <td><%= attachment_image_tag @user, :image, fallback: "no_image.jpg" %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>性別</th>
    <td><%= @user.sex_i18n %></td>
  </tr>
  <tr>
    <th>年齢</th>
    <td><%= @user.age_i18n %></td>
  </tr>
  <tr>
    <th>地域</th>
    <td><%= @user.area_i18n %></td>
  </tr>
</table>

<%= link_to "編集", edit_users_path %>
<%= link_to "退会", leave_users_path %>

<table>
  <tr>
    <th>投稿日</th>
    <th>ジャンル</th>
    <th>タイトル</th>
    <th>本文</th>
  </tr>

  <% @questions.each do |question| %>
    <tr>
      <td><%= question.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= question.genre.name %></td>
      <td>
        <%= link_to question_path(question) do %>
          <%= 'あなたは' + question.object1 + '派 or ' + question.object2 + '派？' %>
        <% end %>
      </td>
      <td><%= question.body %></td>
    </tr>
  <% end %>
</table>

