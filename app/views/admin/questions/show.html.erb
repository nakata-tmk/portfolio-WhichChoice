<div class="row">
  <div class="col-md-8">
    <h3 class="mt-3">いいね<i class="far fa-thumbs-up"></i><%=@question.favorites.count %></h3>
    <h3>コメント<i class="fas fa-comment"></i><%=@question.comments.count %></h3>
    <table class="table-borderless text-left">
      <% @question.comments.each do |comment| %>
        <tr>
          <td><%= attachment_image_tag comment.user, :image, size: "40x40", fallback: "noimage.jpg" %></td>
          <td><p class="ml-3 mt-3"><%= comment.user.name %></p></td>
          <td><p class="ml-3 mt-3"><%= comment.created_at.strftime('%Y/%m/%d') %></p></td>
          <td><p class="ml-3 mt-3"><%= comment.body %></p></td>
        </tr>
       <% end %>
    </table>
  </div>
</div>
