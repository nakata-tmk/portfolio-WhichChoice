<div class="row">
  <div class="col-md-10">
    <div class="question">
      <div class="card">
        <div class="card-header">
          <h2><%= "あなたは#{@question.object1}派 or #{@question.object2}派？" %></h2>
        </div>

        <div class="card-body">
          <p>
            <%= attachment_image_tag @question.user, :image, size: "40x40", fallback: "noimage.jpg" %>
            <%= @question.user.name %>
            <%= @question.created_at.strftime('%Y/%m/%d') %>
            <span class="green"><%= "＃#{@question.genre.name}" %></span>
          </p>
          <p class="mb-3"><%= @question.body %></p>
          <div class="text-right">
            <%= link_to "削除", admin_question_path(@question.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
          </div>

