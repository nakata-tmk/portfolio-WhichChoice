<%= render partial: 'layouts/message', locals: { model: @user } %>

<div class="row">
  <div class="col-md-7">
    <h2><%= @user.name %>さんの会員情報編集</h2>
    <%= form_with model: [:admin, @user], local:true do |f| %>
      <div class="table-responsive-md">
        <table class="table table-borderless text-left">
          <tr>
            <td><%= f.label :name, "名前" %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email %></td>
          </tr>
          <tr>
            <td><%= f.label :image, "画像" %></td>
            <td><%= f.attachment_field :image %></td>
          </tr>
          <tr>
            <td><%= f.label :sex, "性別" %></td>
            <td><%= f.select :sex, User.sexes.keys.map{|k| [I18n.t("enums.user.sex.#{k}"), k]} %></td>
          </tr>
          <tr>
            <td><%= f.label :age, "年齢" %></td>
            <td><%= f.select :age, User.ages.keys.map{|k| [I18n.t("enums.user.age.#{k}"), k]} %></td>
          </tr>
          <tr>
            <td><%= f.label :area, "地域" %></td>
            <td><%= f.select :area, User.areas.keys.map{|k| [I18n.t("enums.user.area.#{k}"), k]} %></td>
          </tr>
          <tr>
            <td><%= f.label :is_active, "会員ステータス" %></td>
            <td><%= f.radio_button :is_active, "true" %>有効 <%=f.radio_button :is_active, "false" %>退会</td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "編集" %></td>
          </tr>
        </table>
      </div>
    <% end %>
  </div>
</div>