<div class="row">
  <div class="col-md-12">
    <h2>会員一覧</h2>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>ID</th>
          <th>画像</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>性別</th>
          <th>年齢</th>
          <th>地域</th>
          <th>会員ステータス</th>
        </tr>
      </thead>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= attachment_image_tag user, :image, size: "70x60", fallback: "noimage.jpg" %></td>
          <td>
            <%= link_to admin_user_path(user.id) do %>
              <%= user.name %>
            <% end %>
          </td>
          <td><%= user.email %></td>
          <td><%= user.sex_i18n %></td>
          <td><%= user.age_i18n %></td>
          <td><%= user.area_i18n %></td>
          <td><%= user.is_active ? "有効" : "退会" %></td>
        </tr>
      <% end %>
    </table>

    <%= paginate @users %>
  </div>
</div>