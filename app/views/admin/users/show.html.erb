<div class="row">
  <div class="col-md-6">
    <h2><%= @user.name %>さんの会員詳細</h2>
    <%= attachment_image_tag @user, :image, size: "250x230", format: 'jpg', fallback: "noimage.jpg" %>
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th style="width: 30%">ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>性別</th>
          <td><%= @user.sex_i18n %></td>
        </tr>
        <tr>
          <th>年齢</th>
          <td><%= @user.age_i18n %></td>
        </tr>
        <tr>
          <th>地域</th>
          <td><%= @user.area_i18n %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td><%= @user.is_active ? "有効" : "退会" %></td>
        </tr>
      </thead>
    </table>

    <%= link_to edit_admin_user_path(@user.id) do %>
      <button type="button" class="btn btn-primary btn-sm">編集</button>
    <% end %>

  </div>
</div>

<div class="row mt-5">
  <div class="col-md-8">
    <h2><%= @user.name %>さんの投稿一覧</h2>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>投稿日</th>
          <th>ジャンル</th>
          <th>タイトル</th>
        </tr>

        <% @user.questions.each do |question| %>
          <tr>
            <td><%= question.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= question.genre.name %></td>
            <td>
              <%= link_to admin_question_path(question) do %>
                <%= question.object1 + '派 or ' + question.object2 + '派？' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </thead>
    </table>
  </div>
</div>
