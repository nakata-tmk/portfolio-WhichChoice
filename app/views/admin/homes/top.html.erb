<h2>投稿一覧</h2>

<h3>ジャンル一覧</h3>
<% @genres.each do |genre| %>
  <p>
    <%= link_to questions_path(genre_id: genre.id) do %>
      <%= genre.name %>
    <% end %>
  </p>
<% end %>

<h3>キーワード検索</h3>
<%= form_with url:admin_search_path, local:true, method: :get do |f| %>
  <%= f.text_field :keyword, placeholder: "キーワードを入力" %>
  <%= f.submit "検索" %>
<% end %>

<table>
  <tr>
    <th>投稿日</th>
    <th>会員名</th>
    <th>ジャンル</th>
    <th>タイトル</th>
  </tr>

  <% @questions.each do |question| %>
    <tr>
      <td><%= question.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        <%= attachment_image_tag question.user, :image, fallback: "no_image.jpg" %>
        <br>
        <%= question.user.name %>
      </td>
      <td><%= question.genre.name %></td>
      <td>
        <%= link_to admin_question_path(question) do %>
          <%= question.object1 + '派 or ' + question.object2 + '派？' %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>