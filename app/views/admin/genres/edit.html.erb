<%= render partial: 'layouts/message', locals: { model: @genre } %>

<div class="row">
  <div class="col-6">
    <h2>ジャンル編集</h2>
    <%= form_with model: [:admin, @genre], local:true do |f| %>
      <table class="table table-borderless">
        <tr>
          <td><%= f.label :name, "ジャンル名" %></td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '変更を保存', class: "btn btn-outline-primary" %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>