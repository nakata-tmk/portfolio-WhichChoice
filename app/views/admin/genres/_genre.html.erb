<div class="col-md-3">
  <h3 class="text-center mr-5">キーワード検索</h3>
  <%= form_with url:admin_search_path, local:true, method: :get do |f| %>
    <%= f.text_field :keyword, placeholder: "キーワードを入力" %>
    <%= f.submit "検索" %>
  <% end %>

  <div class="card mt-3 mr-4">
    <div class="card-header">
      <h3 class="text-center mr-4">ジャンル一覧</h3>
    </div>
    <div class="card-body">
      <% genres.each do |genre| %>
        <%= link_to questions_path(genre_id: genre.id) do %>
          <p class="ml-3"><%= genre.name %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>