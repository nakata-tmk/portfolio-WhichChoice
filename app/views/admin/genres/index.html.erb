<%= render partial: 'layouts/message', locals: { model: @genre } %>

<div class="row">
  <div class="col-5">
    <h2>ジャンル一覧</h2>

    <%= form_with model: [:admin, @genre], local:true do |f| %>
      <table class="table table-borderless">
        <tr>
          <td>ジャンル名</td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '新規作成' %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-6">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>ジャンル名</th>
          <th></th>
        </tr>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre.id) %></td>
          </tr>
        <% end %>
      </thead>
    </table>
  </div>
</div>